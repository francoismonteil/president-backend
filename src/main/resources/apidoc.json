{
  "openapi": "3.0.1",
  "info": {
    "title": "PresidentGame API",
    "description": "API documentation for PresidentGame",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Generated server url"
    }
  ],
  "security": [
    {
      "basicAuth": []
    }
  ],
  "paths": {
    "/api/games": {
      "post": {
        "tags": [
          "game-controller"
        ],
        "summary": "Create a new game",
        "operationId": "createGame",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/PlayerSetup"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Game created successfully",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              }
            }
          }
        }
      }
    },
    "/api/games/{id}/start": {
      "post": {
        "tags": [
          "game-controller"
        ],
        "summary": "Start a game",
        "operationId": "startGame",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "404": {
            "description": "Game not found",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              }
            }
          },
          "200": {
            "description": "Game started",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              }
            }
          }
        }
      }
    },
    "/api/games/{id}/save": {
      "post": {
        "tags": [
          "game-controller"
        ],
        "summary": "Save a game",
        "operationId": "saveGame",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Game saved"
          },
          "404": {
            "description": "Game not found"
          }
        }
      }
    },
    "/api/games/{gameId}/play": {
      "post": {
        "tags": [
          "game-controller"
        ],
        "summary": "Play cards in a game",
        "operationId": "playCards",
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "playerId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PlayCardsRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Cards played"
          },
          "404": {
            "description": "Game or player not found"
          },
          "400": {
            "description": "Invalid move"
          }
        }
      }
    },
    "/api/games/{gameId}/pass": {
      "post": {
        "tags": [
          "game-controller"
        ],
        "summary": "Pass turn in a game",
        "operationId": "passTurn",
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "playerId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "400": {
            "description": "Invalid action"
          },
          "404": {
            "description": "Game or player not found"
          },
          "200": {
            "description": "Turn passed"
          }
        }
      }
    },
    "/api/games/{gameId}/ai/{playerId}/play": {
      "post": {
        "tags": [
          "game-controller"
        ],
        "summary": "Play the turn for an AI player",
        "operationId": "playAiTurn",
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "playerId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "404": {
            "description": "Game or player not found"
          },
          "200": {
            "description": "AI turn played successfully"
          }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "tags": [
          "auth-controller"
        ],
        "summary": "Register a new user",
        "operationId": "register",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AppUser"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "User registered successfully",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": [
          "auth-controller"
        ],
        "summary": "Login user",
        "operationId": "login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AppUser"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "User logged in successfully",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/games/{id}": {
      "get": {
        "tags": [
          "game-controller"
        ],
        "summary": "Get game by ID",
        "operationId": "getGame",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Game found",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              }
            }
          },
          "404": {
            "description": "Game not found",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              }
            }
          }
        }
      }
    },
    "/api/games/{id}/state": {
      "get": {
        "tags": [
          "game-controller"
        ],
        "summary": "Get the current state of a game",
        "operationId": "getGameState",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "404": {
            "description": "Game not found",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              }
            }
          },
          "200": {
            "description": "Game state retrieved",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              }
            }
          }
        }
      }
    },
    "/api/games/saved": {
      "get": {
        "tags": [
          "game-controller"
        ],
        "summary": "Load all saved games",
        "operationId": "loadSavedGames",
        "responses": {
          "200": {
            "description": "Saved games loaded",
            "content": {
              "*/*": {
                "schema": {
                  "uniqueItems": true,
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Game"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PlayerSetup": {
        "type": "object",
        "properties": {
          "playerName": {
            "type": "string"
          },
          "aiType": {
            "type": "string"
          }
        }
      },
      "AppUser": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "description": "Username of the user",
            "example": "john_doe"
          },
          "password": {
            "type": "string",
            "description": "Password of the user",
            "example": "password123"
          },
          "roles": {
            "uniqueItems": true,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Role"
            }
          },
          "avatarUrl": {
            "type": "string"
          },
          "gamesPlayed": {
            "type": "integer",
            "format": "int32"
          },
          "gamesWon": {
            "type": "integer",
            "format": "int32"
          }
        },
        "description": "User entity representing a player"
      },
      "Card": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier of the card",
            "format": "int64",
            "example": 1
          },
          "suit": {
            "type": "string",
            "description": "Suit of the card",
            "example": "Hearts"
          },
          "rank": {
            "type": "string",
            "description": "Rank of the card",
            "example": "A"
          }
        }
      },
      "Game": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier of the game",
            "format": "int64",
            "example": 1
          },
          "appUser": {
            "$ref": "#/components/schemas/AppUser"
          },
          "players": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Player"
            }
          },
          "deck": {
            "uniqueItems": true,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Card"
            }
          },
          "playedCards": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Card"
            }
          },
          "ranks": {
            "type": "object",
            "additionalProperties": {
              "type": "integer",
              "format": "int32"
            }
          },
          "isSaved": {
            "type": "boolean"
          },
          "state": {
            "type": "string",
            "enum": [
              "INITIALIZED",
              "DISTRIBUTING_CARDS",
              "IN_PROGRESS",
              "FINISHED"
            ]
          },
          "currentPlayerIndex": {
            "type": "integer",
            "format": "int32"
          },
          "ruleEngine": {
            "$ref": "#/components/schemas/RuleEngine"
          },
          "saved": {
            "type": "boolean"
          }
        }
      },
      "GameAI": {
        "type": "object"
      },
      "Permission": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "Player": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "hand": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Card"
            }
          },
          "game": {
            "$ref": "#/components/schemas/Game"
          },
          "canPlayInCurrentPli": {
            "type": "boolean",
            "writeOnly": true
          },
          "ai": {
            "$ref": "#/components/schemas/GameAI"
          },
          "aitype": {
            "type": "string",
            "enum": [
              "EASY",
              "MEDIUM",
              "HARD"
            ]
          }
        }
      },
      "Role": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "permissions": {
            "uniqueItems": true,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Permission"
            }
          }
        }
      },
      "RuleEngine": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "suiteActive": {
            "type": "boolean"
          },
          "activeSuiteRank": {
            "type": "string"
          },
          "reverseActive": {
            "type": "boolean"
          },
          "activeReverseRank": {
            "type": "string"
          },
          "forcedRankActive": {
            "type": "boolean"
          },
          "currentRequiredRank": {
            "type": "string"
          },
          "revolutionActive": {
            "type": "boolean"
          },
          "currentMoveSize": {
            "type": "integer",
            "format": "int32"
          },
          "turnPlayed": {
            "type": "integer",
            "format": "int32"
          },
          "bestCard": {
            "type": "string"
          }
        }
      },
      "PlayCardsRequest": {
        "type": "object",
        "properties": {
          "cards": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Card"
            }
          },
          "specialMoveActivated": {
            "type": "boolean"
          }
        }
      }
    },
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      },
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}