{
  "openapi": "3.0.1",
  "info": {
    "title": "PresidentGame API",
    "description": "API documentation for PresidentGame",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Generated server url"
    }
  ],
  "security": [
    {
      "basicAuth": []
    }
  ],
  "paths": {
    "/api/games": {
      "post": {
        "tags": [
          "game-controller"
        ],
        "summary": "Create a new game",
        "operationId": "createGame",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Game created successfully",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/games/{id}/start": {
      "post": {
        "tags": [
          "game-controller"
        ],
        "summary": "Start a game",
        "operationId": "startGame",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "404": {
            "description": "Game not found",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              }
            }
          },
          "200": {
            "description": "Game started",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              }
            }
          }
        }
      }
    },
    "/api/games/{id}/save": {
      "post": {
        "tags": [
          "game-controller"
        ],
        "summary": "Save a game",
        "operationId": "saveGame",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Game saved"
          },
          "404": {
            "description": "Game not found"
          }
        }
      }
    },
    "/api/games/{gameId}/play": {
      "post": {
        "tags": [
          "game-controller"
        ],
        "summary": "Play cards in a game",
        "operationId": "playCards",
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "playerId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Card"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Cards played"
          },
          "404": {
            "description": "Game or player not found"
          },
          "400": {
            "description": "Invalid move"
          }
        }
      }
    },
    "/api/games/{gameId}/pass": {
      "post": {
        "tags": [
          "game-controller"
        ],
        "summary": "Pass turn in a game",
        "operationId": "passTurn",
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "playerId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "400": {
            "description": "Invalid action"
          },
          "404": {
            "description": "Game or player not found"
          },
          "200": {
            "description": "Turn passed"
          }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "tags": [
          "auth-controller"
        ],
        "summary": "Register a new user",
        "operationId": "register",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AppUser"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "User registered successfully",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/games/{id}": {
      "get": {
        "tags": [
          "game-controller"
        ],
        "summary": "Get game by ID",
        "operationId": "getGame",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Game found",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              }
            }
          },
          "404": {
            "description": "Game not found",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              }
            }
          }
        }
      }
    },
    "/api/games/{id}/state": {
      "get": {
        "tags": [
          "game-controller"
        ],
        "summary": "Get the current state of a game",
        "operationId": "getGameState",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "404": {
            "description": "Game not found",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              }
            }
          },
          "200": {
            "description": "Game state retrieved",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              }
            }
          }
        }
      }
    },
    "/api/games/saved": {
      "get": {
        "tags": [
          "game-controller"
        ],
        "summary": "Load all saved games",
        "operationId": "loadSavedGames",
        "responses": {
          "200": {
            "description": "Saved games loaded",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Game"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Card": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier of the card",
            "format": "int64",
            "example": 1
          },
          "suit": {
            "type": "string",
            "description": "Suit of the card",
            "example": "Hearts"
          },
          "rank": {
            "type": "string",
            "description": "Rank of the card",
            "example": "A"
          }
        }
      },
      "Game": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "players": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Player"
            }
          },
          "deck": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Card"
            }
          },
          "playedCards": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Card"
            }
          },
          "currentPlayerIndex": {
            "type": "integer",
            "format": "int32"
          },
          "ranks": {
            "type": "object",
            "additionalProperties": {
              "type": "integer",
              "format": "int32"
            }
          },
          "isSaved": {
            "type": "boolean"
          }
        }
      },
      "Player": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "hand": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Card"
            }
          }
        }
      },
      "AppUser": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier of the user",
            "format": "int64",
            "example": 1
          },
          "username": {
            "type": "string",
            "description": "Username of the user",
            "example": "john_doe"
          },
          "password": {
            "type": "string",
            "description": "Password of the user",
            "example": "password123"
          },
          "roles": {
            "uniqueItems": true,
            "type": "array",
            "description": "Roles assigned to the user",
            "example": [
              "ROLE_USER",
              "ROLE_ADMIN"
            ],
            "items": {
              "type": "string",
              "description": "Roles assigned to the user",
              "example": "[\"ROLE_USER\",\"ROLE_ADMIN\"]"
            }
          }
        },
        "description": "User entity representing a player"
      }
    },
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  }
}