{
  "openapi": "3.0.1",
  "info": {
    "title": "PresidentGame API",
    "description": "API documentation for PresidentGame",
    "version": "1.1"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Generated server url"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/api/games": {
      "post": {
        "tags": [
          "game-controller"
        ],
        "summary": "Create a new game",
        "operationId": "createGame",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Game created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/ErrorResponse"
              }
            }
          }
        }
      }
    },
    "/api/games/{gameId}/start": {
      "post": {
        "tags": [
          "game-controller"
        ],
        "summary": "Start a game",
        "operationId": "startGame",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "description": "ID of the game",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "404": {
            "description": "Game not found",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/ErrorResponse"
              }
            }
          },
          "200": {
            "description": "Game started",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/Game"
              }
            }
          }
        }
      }
    },
    "/api/games/{gameId}/save": {
      "post": {
        "tags": [
          "game-controller"
        ],
        "summary": "Save a game",
        "operationId": "saveGame",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "description": "ID of the game",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Game saved"
          },
          "404": {
            "description": "Game not found",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/ErrorResponse"
              }
            }
          }
        }
      }
    },
    "/api/games/{gameId}/play": {
      "post": {
        "tags": [
          "game-controller"
        ],
        "summary": "Play cards in a game",
        "operationId": "playCards",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "description": "ID of the game",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "playerId",
            "in": "query",
            "required": true,
            "description": "ID of the player",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Card"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Cards played",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/Game"
              }
            }
          },
          "404": {
            "description": "Game or player not found",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/ErrorResponse"
              }
            }
          },
          "400": {
            "description": "Invalid move",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/ErrorResponse"
              }
            }
          }
        }
      }
    },
    "/api/games/{gameId}/pass": {
      "post": {
        "tags": [
          "game-controller"
        ],
        "summary": "Pass turn in a game",
        "operationId": "passTurn",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "description": "ID of the game",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "playerId",
            "in": "query",
            "required": true,
            "description": "ID of the player",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "400": {
            "description": "Invalid action",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/ErrorResponse"
              }
            }
          },
          "404": {
            "description": "Game or player not found",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/ErrorResponse"
              }
            }
          },
          "200": {
            "description": "Turn passed"
          }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "tags": [
          "auth-controller"
        ],
        "summary": "Register a new user",
        "operationId": "register",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AppUser"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "User registered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/ErrorResponse"
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": [
          "auth-controller"
        ],
        "summary": "Login user",
        "operationId": "login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AppUser"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "User logged in successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/ErrorResponse"
              }
            }
          }
        }
      }
    },
    "/api/games/{gameId}": {
      "get": {
        "tags": [
          "game-controller"
        ],
        "summary": "Get game by ID",
        "operationId": "getGame",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "description": "ID of the game",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Game found",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/Game"
              }
            }
          },
          "404": {
            "description": "Game not found",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/ErrorResponse"
              }
            }
          }
        }
      }
    },
    "/api/games/{gameId}/state": {
      "get": {
        "tags": [
          "game-controller"
        ],
        "summary": "Get the current state of a game",
        "operationId": "getGameState",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "description": "ID of the game",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "404": {
            "description": "Game not found",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/ErrorResponse"
              }
            }
          },
          "200": {
            "description": "Game state retrieved",
            "content": {
              "application/json": {
                "$ref": "#/components/schemas/Game"
              }
            }
          }
        }
      }
    },
    "/api/games/saved": {
      "get": {
        "tags": [
          "game-controller"
        ],
        "summary": "Load all saved games",
        "operationId": "loadSavedGames",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Saved games loaded",
            "content": {
              "application/json": {
                "uniqueItems": true,
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Game"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AppUser": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "description": "Username of the user",
            "example": "john_doe"
          },
          "password": {
            "type": "string",
            "description": "Password of the user",
            "example": "password123"
          }
        },
        "description": "User entity representing a player"
      },
      "Card": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier of the card",
            "format": "int64",
            "example": 1
          },
          "suit": {
            "type": "string",
            "description": "Suit of the card",
            "example": "Hearts"
          },
          "rank": {
            "type": "string",
            "description": "Rank of the card",
            "example": "A"
          }
        }
      },
      "Game": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier of the game",
            "format": "int64",
            "example": 1
          },
          "appUser": {
            "$ref": "#/components/schemas/AppUser"
          },
          "players": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Player"
            }
          },
          "deck": {
            "uniqueItems": true,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Card"
            }
          },
          "playedCards": {
            "uniqueItems": true,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Card"
            }
          },
          "currentPlayerIndex": {
            "type": "integer",
            "format": "int32"
          },
          "ranks": {
            "type": "object",
            "additionalProperties": {
              "type": "integer",
              "format": "int32"
            }
          },
          "isSaved": {
            "type": "boolean"
          }
        }
      },
      "Player": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Error message"
          },
          "statusCode": {
            "type": "integer",
            "description": "HTTP status code"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
